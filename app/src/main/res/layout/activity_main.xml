<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        tools:context=".MainActivity">
    <EditText
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:inputType="numberSigned"
            android:ems="10"
            android:id="@+id/etA"
            android:textSize="24dp" android:text="0" android:textAlignment="center"
            android:layout_marginStart="80dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/etB" app:layout_constraintHorizontal_bias="0.036"
            android:layout_marginTop="116dp" app:layout_constraintTop_toTopOf="parent" android:enabled="false"/>
    <EditText
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:inputType="numberSigned"
            android:ems="10"
            android:id="@+id/etB"
            android:textSize="24dp" android:text="0" android:textAlignment="center"
            android:layout_marginEnd="80dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="116dp"
            app:layout_constraintTop_toTopOf="parent" android:enabled="false"/>
    <Button
            android:text="+1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn1a"
            android:onClick="marcar1A"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="56dp" app:layout_constraintEnd_toStartOf="@+id/btn1b"
            android:layout_marginEnd="8dp" app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/etA"/>
    <Button
            android:text="+1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn1b"
            android:onClick="marcar1B" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="64dp" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/etB"/>
    <Button
            android:text="+2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn2a"
            android:onClick="marcar2A"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="56dp" app:layout_constraintEnd_toStartOf="@+id/btn2b"
            android:layout_marginEnd="8dp" app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/btn1a"/>
    <Button
            android:text="+3"
            android:layout_width="84dp"
            android:layout_height="51dp"
            android:id="@+id/btn3a"
            android:onClick="marcar3A"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="56dp" app:layout_constraintEnd_toStartOf="@+id/btn3b"
            android:layout_marginEnd="8dp" app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/btn2a"/>
    <Button
            android:text="+3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn3b"
            android:onClick="marcar3B"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="64dp" android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/btn2b"/>
    <Button
            android:text="+2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn2b"
            android:onClick="marcar2B" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="64dp" android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/btn1b"/>
    <Button
            android:text="RESET"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnreset"
            android:onClick="reset"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="360dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" app:layout_constraintHorizontal_bias="0.498"/>
    <TextView
            android:text="@string/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView" android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="40dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.497"/>
</androidx.constraintlayout.widget.ConstraintLayout>